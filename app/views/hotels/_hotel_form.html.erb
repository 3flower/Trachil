<div class="col-xs-12">
  <%= f.label :"ホテル名" %>
  <%= f.text_field :meal_name %>
</div>

<div class="col-xs-12">
  <%= f.label :"感想" %>
  <%= f.text_area :meal_impression %>
</div>

<div class="col-xs-12">
  <p>※　0円の場合が無料と表示されます</p>
  <%= f.label :"大人料金" %>
  <%= f.text_field :meal_adult_price %>
  <%= f.label :"子供料金" %>
  <%= f.text_field :meal_child %>
</div>

<div class="col-xs-12">
  <%= f.label :"住所" %>
  <%= f.text_field :meal_address %>
</div>

<% if Travel.traffic_ways == 0 %>
  <div class="col-xs-12">
    <%= f.label :"駐車場" %>
    <%= f.select :meal_parking, Hotel.parkings.keys, prompt: "-- 選択してください --" %>
  </div>
<% end %>

<div class="col-xs-12">
  <%= f.label :"公式サイトのURL" %>
  <p>※　あれば記載してくさい</p>
  <%= f.text_field :meal_official_site %>
</div>
