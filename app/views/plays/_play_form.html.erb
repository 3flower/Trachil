<%#= form_with(model:play, url:"#", local:true, method: :patch) do |f| %>

  <div class="col-xs-12">
    <%= f.label :"訪れた場所" %>
    <%= f.text_field :play_name %>
  </div>

  <div class="col-xs-12">
    <%= f.label :"感想" %>
    <%= f.text_area :play_impression %>
  </div>

  <div class="col-xs-12">
    <p>※　0円の場合が無料と表示されます</p>
    <%= f.label :"大人料金" %>
    <%= f.text_field :play_adult_price %>
    <%= f.label :"子供料金" %>
    <%= f.text_field :play_child %>
  </div>

  <div class="col-xs-12">
    <%= f.label :"住所" %>
    <%= f.text_field :play_address %>
  </div>

  <% if current_user.is_diaper == true %>
    <div class="col-xs-12">
      <%= f.label :"オムツ変える場所" %>
      <%= f.radio_button :is_diaper_place, true %>
      <%= f.label :is_diaper_place, "ある", value: :true %>
      <%= f.radio_button :is_diaper_place, false  %>
      <%= f.label :is_diaper_place, "ない", value: :false %>
    </div>
  <% end %>

  <%# if Travel.traffic_ways == 0 %>
    <div class="col-xs-12">
      <%= f.label :"駐車場" %>
      <%= f.select :play_parking, Play.parkings.keys, prompt: "-- 選択してください --" %>
    </div>
  <%# end %>

  <div class="col-xs-12">
    <%= f.label :"公式サイトのURL" %>
    <p>※　あれば記載してくさい</p>
    <%= f.text_field :play_official_site %>
  </div>
